<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContent_Detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivDishImageDetail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/dishNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text = "@string/empty_string"
                android:textSize="40sp"
                android:layout_below="@+id/ivDishImageDetail"/>

            <ImageView
                android:id="@+id/ivChefDetail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:layout_below="@+id/dishNameDetail"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvChefNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/empty_string"
                android:textSize="20sp"
                android:layout_below="@+id/ivChefDetail"/>

            <TextView
                android:id="@+id/dishPriceDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center"
                android:text="@string/empty_string"
                android:textSize="32sp"
                android:textColor="@color/colorOrange"
                android:layout_below="@+id/tvChefNameDetail"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/empty_string"
                android:textColor="@color/colorBackground"
                android:layout_below="@id/dishPriceDetail"
                />

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tvOrder"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/txt_place_order"
        android:textSize="20sp"
        android:textColor="@color/colorBackground"
        android:background="@color/colorWarmYellow"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>